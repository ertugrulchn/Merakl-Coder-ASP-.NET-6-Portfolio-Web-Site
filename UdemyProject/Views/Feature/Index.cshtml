@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h2 class="mb-0">Öne Çıkan Düzenleme Sayfası</h2>
</div>
<div class="card-body px-lg-5 py-lg-5">
    @using (Html.BeginForm("Index", "Feature", FormMethod.Post))
    {
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Deneyim Ekle</h4>
                    <form class="forms-sample">
                        @Html.HiddenFor(e=>e.FeatureID)
                        <div class="form-group">
                            <label>Başlık</label>
                            <input type="text" asp-for="Header" class="form-control" placeholder="Başlık">
                        </div>
                        <div class="form-group">
                            <label>Ad-Soyad</label>
                            <input type="text" class="form-control" asp-for="Name" placeholder="Ad-Soyad">
                        </div>
                        <div class="form-group">
                            <label>Geliştirici Dalı</label>
                            <input type="text" class="form-control" asp-for="Title" placeholder="Gelitşrici Türü Ör: Full-Stack Dev.">
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
