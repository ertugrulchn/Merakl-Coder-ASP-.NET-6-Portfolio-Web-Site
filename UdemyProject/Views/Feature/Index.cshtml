@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h2 class="mb-0">Öne Çıkan Düzenleme Sayfası</h2>
</div>
<div class="card-body px-lg-5 py-lg-5">
    @using (Html.BeginForm("Index", "Feature", FormMethod.Post))
    {
        @Html.HiddenFor(x=>x.FeatureID)
        <div class="form-group mb-3">
            <div class="input-group input-group-merge input-group-alternative">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-html5"></i></span>
                </div>
                @Html.TextBoxFor(x=>x.Header, new {@class="form-control", @placeholder="Başlık"})
            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-merge input-group-alternative">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-tag"></i></span>
                </div>
                @Html.TextBoxFor(x=>x.Name, new {@class="form-control", @placeholder="Ad-Soyad"})
            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-merge input-group-alternative">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-tag"></i></span>
                </div>
                @Html.TextBoxFor(x=>x.Title, new {@class="form-control", @placeholder="Gelitşrici Türü Ör: Full-Stack Dev."})
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary my-4">Kaydet</button>
        </div>
    }
</div>
