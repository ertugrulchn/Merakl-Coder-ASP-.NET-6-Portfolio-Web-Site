@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h2 class="mb-0">Proje Ekle</h2>
</div>
<div class="card-body px-lg-5 py-lg-5">
    @using (Html.BeginForm("AddPortfolio", "Portfolio", FormMethod.Post))
    {
        <div class="form-group mb-3">
            <div class="input-group input-group-merge input-group-alternative">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-html5"></i></span>
                </div>
                @Html.TextBoxFor(x=>x.Name, new {@class="form-control", @placeholder="Proje Başlığı"})
                @Html.ValidationMessageFor(x=>x.Name)
            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-merge input-group-alternative">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-tag"></i></span>
                </div>
                @Html.TextBoxFor(x=>x.ImageUrl, new {@class="form-control", @placeholder="Kapak Resmi(URL)"})
                @Html.ValidationMessageFor(x=>x.ImageUrl)
            </div>
        </div>
        <div class="form-group mb-3">
            <div class="input-group input-group-merge input-group-alternative">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-html5"></i></span>
                </div>
                @Html.TextBoxFor(x=>x.ImageUrl2, new {@class="form-control", @placeholder="Slider Resmi(URL)"})
                @Html.ValidationMessageFor(x=>x.ImageUrl2)
            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-merge input-group-alternative">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-tag"></i></span>
                </div>
                @Html.TextBoxFor(x=>x.ProjectUrl,  new {@class="form-control", @placeholder="Proje Linki"})
                @Html.ValidationMessageFor(x=>x.ProjectUrl)
            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-merge input-group-alternative">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-tag"></i></span>
                </div>
                @Html.TextBoxFor(x=>x.Price,  new {@class="form-control", @placeholder="Fiyat"})
                @Html.ValidationMessageFor(x=>x.Price)
            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-merge input-group-alternative">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-tag"></i></span>
                </div>
                @Html.TextBoxFor(x=>x.Value,  new {@class="form-control", @placeholder="Tamamlanma Oranı"})
                @Html.ValidationMessageFor(x=>x.Value)
            </div>
        </div>
        <div class="form-group">
            <div class="input-group input-group-merge input-group-alternative">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="ni ni-tag"></i></span>
                </div>
                @Html.TextBoxFor(x=>x.Platform,  new {@class="form-control", @placeholder="Platform Resim URL"})
                @Html.ValidationMessageFor(x=>x.Platform)
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-info my-4">Kaydet</button>
        </div>
    }
</div>

