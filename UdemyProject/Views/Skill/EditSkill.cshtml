@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkil";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yetenek Güncelle</h4>
                <form class="forms-sample">
                    @Html.HiddenFor(s=>s.SkillID)
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık">
                    </div>
                    <div class="form-group">
                        <label>Değer</label>
                        <input type="text" class="form-control" asp-for="Value" placeholder="Değer">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
}