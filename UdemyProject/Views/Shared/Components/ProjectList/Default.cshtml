@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ana Görsel</th>
                                <th>Project Adı</th>
                                <th>URL</th>
                                <th>Fiyat</th>
                                <th>Tamamlanma Oranı</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.PortfolioID</td>
                                    <td><img src="@item.ImageUrl" alt="@item.Name" /></td>
                                    <td>@item.Name</td>
                                    <td><a href="@item.ProjectUrl">@item.ProjectUrl.Substring(0, 15)...</a></td>
                                    <td>@item.Price</td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="badge badge-success">Approved</div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>